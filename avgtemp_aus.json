{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "background": "white",
  "params": [
    {
      "name": "selectedMonth",
      "bind": {
        "input": "select",
        "options": [
          "Annual",
          "January",
          "February",
          "March",
          "April",
          "May",
          "June",
          "July",
          "August",
          "September",
          "October",
          "November",
          "December"
        ],
        "name": "Select Month: "
      },
      "value": "Annual"
    }
  ],
  "projection": {"type": "mercator"},
  "layer": [
    {
      "data": {
        "url": "data/ne_50m_admin_1_states_provinces.json",
        "format": {
          "type": "topojson",
          "feature": "ne_50m_admin_1_states_provinces"
        }
      },
      "mark": {
        "type": "geoshape",
        "fill": "#EAEAEA",
        "stroke": "darkgrey",
        "strokeWidth": 0.5
      }
    },
    {
      "data": {
        "url": "data/tasmax_aus-station_r1i1p1_CSIRO-MnCh-wrt-1986-2005-Scl_v1_mon_seasavg-clim.csv"
      },
      "transform": [
        {
          "calculate": "datum[selectedMonth]",
          "as": "tempValue"
        },
        {
          "calculate": "selectedMonth + ' Max Temp (째C)'",
          "as": "tempTitle"
        }
      ],
      "mark": "circle",
      "encoding": {
        "longitude": {"field": "LON", "type": "quantitative"},
        "latitude": {"field": "LAT", "type": "quantitative"},
        "size": {"value": 80},
        "opacity": {"value": 0.8},
        "color": {
          "field": "tempValue",
          "type": "quantitative",
          "title": "Temperature (째C)",
         
          "scale": {
            "domain": [20, 35],
            "range": ["#ffeda0", "#feb24c", "#f03b20"],
            "type": "threshold"
          },
          "legend": {"symbolType": "square", "labelExpr": "(datum.label === null ? '0' : datum.label) + '째C'"}
        },
        "tooltip": [
          {
            "field": "STATION_NAME",
            "type": "nominal",
            "title": "Weather Station Name"
          },
          {
            "field": "tempValue",
            "type": "quantitative",
            "title": "Average Max Temp (째C)",
            "format": ".1f"
          }
        ]
      }
    }
  ]
}
