{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Increase in Banana Costs Over Time",
  "data": {
    "url": "data/bananas.csv"
  },
  "width": 800,
  "height": 450,
  "encoding": {
    "x": {
      "field": "Time",
      "type": "temporal",
      "title": "Year",
      "axis": {
        "format": "%Y",
        "tickCount": "year"
      }
    },
    "y": {
      "field": "Cost Increase",
      "type": "quantitative",
      "title": "Customer Price Index (CPI)"
    }
  },
  "layer": [
    {
      "mark": {"type": "line", "strokeWidth": 2}
    },
    {
      "mark": {"type": "circle", "size": 50}
    }
  ]
}