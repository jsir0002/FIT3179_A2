{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/bananas.csv"
  },
  "width": 800,
  "height": 450,
  "encoding": {
    "x": {
      "field": "Time",
      "type": "temporal",
      "title": "Year",
      "axis": {
        "format": "%Y",
        "tickCount": "year"
      }
    },
    "y": {
      "field": "Cost Increase",
      "type": "quantitative",
      "title": "Customer Price Index (CPI)"
    },
    "tooltip": [
      {"field": "Time", "type": "temporal", "title": "Date (mm/yyyy)", "format": "%m/%Y"},
      {"field": "Cost Increase", "type": "quantitative", "title": "CPI"}
    ]
  },
  "layer": [
    {
      "mark": {"type": "area", "color":"black", "opacity":0.7}
    },
    {
      "mark": {"type": "line", "strokeWidth": 2, "color":"black"}
    },
    {
      "mark": {"type": "rule", "color":"red", "opacity":0.8},
      "transform": [
        {
  
          "filter": "year(datum.Time) == 2011 && month(datum.Time) == 2"
        }
      ]
    },
    {
      "mark": {
        "type": "text",
        "align": "left",
        "dx": 10,
        "dy": -10,
        "color": "red",
        "fontWeight": "bold"
      },
      "transform": [
        {
        
          "filter": "year(datum.Time) == 2011 && month(datum.Time) == 2"
        }
      ],
      "encoding": {
        "text": {"value": "Cyclone Yasi Landing (Mar 2011)"}
      }
    }
  ]
}