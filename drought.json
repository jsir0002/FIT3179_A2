{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/drought.csv"
  },
  "width": 700,
  "height": 450,

  "transform": [
    {
      "filter": "datum.Category !== 'Reticulated mains' && datum.Category !== 'Recycled'"
    }
  ],

  
  "mark": "bar",
  "encoding": 
  {
    "x": {
      "field": "Category",
      "type": "nominal",
      "title": "Water Source",
      "axis": {"labelAngle": 0}
    },

    "y": {
      "field": "Megalitres",
      "type": "quantitative",
      "title": "Total Megalitres", 
      "axis": {"format": "s"}
    },

    "color": {
      "field": "Year",
      "type": "nominal",
      "legend": {"title": "Year"},
      "scale": {"range": ["#cccccc", "#525252"]}
    },
    
    "tooltip": [
      {"field": "Year"},
      {"field": "Category"},
      {"field": "Megalitres", "format": ","}
    ]
  }
}