{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "data/abs_sunburn.csv"
  },
  "width": 700,
  "height": 450,
  "params": [
    {
      "name": "filter_type",
      "value": "Victoria",
      "bind": {
        "input": "select",
        "options": [
          "Victoria",
          "New South Wales",
          "Queensland",
          "South Australia",
          "Western Australia",
          "Tasmania",
          "Northern Territory"
        ],
        "name": "Filter by State/Territory: "
      }
    }
  ],
  "transform": [
    {
   
      "filter": "datum.State == filter_type" 
    }
  ],
  "mark": "bar",
  "encoding": {
    "y": {
      "field": "Type",
      "type": "nominal",
      "title": "Sunburn Level"
    },
    "x": {
      "field": "Percentage(%)",
      "type": "quantitative",
      "title": "Percentage (%)"
    },
    "color":{"field": "Type", "scale":{"range": ["#fd8d3c", "#fd8d3c","#ffeda0","#ffeda0"]}, "legend": null},
    "tooltip": [
      {"field": "State"},
      {"field": "Type"},
      {"field": "Percentage(%)", "format": ".2f"}
    ]
  }
  
}